<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/socket.io/socket.io.js"></script>
    <title>Document</title>
  </head>
  <body>
    <button onclick="joinARoom()">joinRoom</button>
    <button onclick="emitHelloMessage()">emitHello</button>
    <script>
      const socket = io();
      // client-side
      socket.on("connect", () => {});

      socket.on("chatting", (msg) => {
        console.log(msg);
      });

      socket.on("disconnect", () => {
        console.log(socket.id); // undefined
      });

      const emitHelloMessage = () => {
        socket.emit("chatting", "hello message");
      };
      const joinARoom = () => {
        socket.emit("request joinRoom", "A");
        console.log("room 에 참가");
      };
    </script>
  </body>
</html>
